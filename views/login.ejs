<%- include('partials/head') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="d-block d-width">

      <div id="messagebox">
        <% if (messages.loginMessage) { %>
        <!-- warning Alert -->
        <div class="alert alert-warning alert-dismissible fade show">
          <%=messages.loginMessage %>
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
        <%} %>
      </div>

      <div class="card">
        <div class="card-header text-center gigeasy-header gigeasy-brand-big">
          <span class="gigeasy-icon fas fa-calendar-check"></span>
          <span class="gig">gig</span><span class="easy">easy</span>
        </div>
        <div class="card-body">
          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <input type="email" class="form-control" placeholder="Email-Adresse" name="useremail" autofocus>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Passwort" name="password">
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-dark mb-2">Login</button>
            </div>
            <div class="text-center mb-4"><a href="/forgot"><u>Forgot Password?</u></a></div>
            <div class="text-center">Don't have an account yet?</div>
            <div class="text-center"><a href="/register"><u>Sign up</u></a></div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

